FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            constantbXiIgnition;

    cellZone        ignition;

    period          720;

    start           715;
    duration        1;
    strength        1;
    combustionDuration 245;
}

correction
{
    type            bXiKernelCorr;

    cellZone        all;

    ignition        ignition;

    duration        20;

    kernelShape
    {
        type            cylindrical;
        thickness       0.05;
        cylinderFraction 1;
    }
}


