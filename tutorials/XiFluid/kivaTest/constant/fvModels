FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            sphericalbXiIgnition;

    select          cellZone;
    cellZone        ignition;

    start           -15;
    duration        20;
    strength        2;

    XiCorr
    {
        select          all;
        sphereFraction  1;
    }
}


