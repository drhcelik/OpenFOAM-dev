FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mover
{

    type                multiValveEngine;
    libs                ("libmultiValveEngine.so");

    slidingPatches      (liner);

    piston
    {
        patches             (piston);
        linerPatches        (liner);
        axis                (0 0 1);

        motion
        {
            type            crankConnectingRodMotion;

            conRodLength    0.147;
            stroke          0.08423;
        }

        // Select all cells
        select              all;

        cacheInterval       10000;
        freezePistonBowl    no;
        freezeCylinderHead  yes;

        cosineScaling       no;
    }
}


