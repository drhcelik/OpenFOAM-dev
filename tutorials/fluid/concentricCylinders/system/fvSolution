FoamFile
{
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(G|Ii.*)"
    {
        solver           GAMG;
        smoother         GaussSeidel;
        tolerance        1e-8;
        relTol           0.1;
        maxIter          100;
    }

    "(h|e)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.1;
    }
}

PIMPLE
{
    flow off;
    momentumPredictor no;
}

relaxationFactors
{
    equations
    {
        "(h|e)"         0.7;
        "(G|ILambda.*)" 1.0;
    }
}

