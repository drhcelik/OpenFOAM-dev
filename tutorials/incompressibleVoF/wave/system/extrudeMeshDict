FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom   mesh;

sourceCase      ".";

sourcePatches   (right);

flipNormals     false;

extrudeModel
{
    type            linearNormal;

    nLayers         25;
    expansionRatio  1.09;

    thickness       1500;
}

mergeFaces      false;


