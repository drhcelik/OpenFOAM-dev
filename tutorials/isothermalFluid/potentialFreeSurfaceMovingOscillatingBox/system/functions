FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      functions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

forces
{
    type            forces;
    libs            ("libforces.so");
    writeControl    writeTime;
    patches         (floatingObject);
    rho             rhoInf;
    log             yes;
    rhoInf          1000;
    CofR            (0 0 0);
}

poolHeight
{
    type            surfaceFieldValue;
    libs            ("libfieldFunctionObjects.so");
    writeControl    timeStep;
    writeInterval   1;
    log             yes;
    writeTotalArea  no;
    writeFields     no;
    select          faceZone;
    faceZone
    {
        type        intersection;

        freeSurface
        {
            type        patch;
            patch       freeSurface;
        }

        box
        {
            type        box;
            zoneType    face;
            box         (-100 0.9 -100) (0.2 100 100);
        }
    }
    operation       areaAverage;
    fields
    (
        zeta
    );
}

