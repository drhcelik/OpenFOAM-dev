FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createNonConformalCouplesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields no;

nonConformalCouples
{
    // Intra-region cyclic couplings

    NCC_iv
    {
        region          fluid;
        patches         (nonCouple_iv_cyl nonCouple_cyl_iv);
        transform       none;
    }

    NCC_ev
    {
        region          fluid;
        patches         (nonCouple_ev_cyl nonCouple_cyl_ev);
        transform       none;
    }

    NCC_iv_port
    {
        region          fluid;
        patches         (nonCouple_ip_iv nonCouple_iv_ip);
        transform       none;
    }

    NCC_ev_port
    {
        region          fluid;
        patches         (nonCouple_ep_ev nonCouple_ev_ep);
        transform       none;
    }

    // Inter-region mapped-wall couplings

    linerFluid
    {
        regions         (liner fluid);
        patches         (nonCoupleLiner nonCoupleFluidLiner);
    }

    linerPiston
    {
        regions         (liner piston);
        patches         (nonCoupleLiner nonCouplePiston);
    }

    cylinderHeadFluid
    {
        regions         (cylinderHead fluid);
        patches         (nonCoupleCylinderHead nonCoupleFluidCylinderHead);
    }

    valveFluidEvStem
    {
        regions         (exhaustValve fluid);
        patches         (nonCoupleExhaustValve evStem);
    }

    valueFluidIvStem
    {
        regions         (intakeValve fluid);
        patches         (nonCoupleIntakeValve ivStem);
    }

    valueFluidEvHead
    {
        regions         (exhaustValve fluid);
        patches         (nonCoupleExhaustValve evHead);
    }

    valveFluidIvHead
    {
        regions         (intakeValve fluid);
        patches         (nonCoupleIntakeValve ivHead);
    }

    cylinderHeadValve1
    {
        regions         (cylinderHead exhaustValve);
        patches         (nonCoupleCylinderHead nonCoupleExhaustValve);
    }

    cylinderHeadValve2
    {
        regions         (cylinderHead intakeValve);
        patches         (nonCoupleCylinderHead nonCoupleIntakeValve);
    }
}

