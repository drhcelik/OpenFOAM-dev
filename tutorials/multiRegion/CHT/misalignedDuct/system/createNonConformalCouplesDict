FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      createNonConformalCouplesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields          yes;

nonConformalCouples
{
    fluid1Fluid2
    {
        region          fluid;
        patches         (fluidNonCouple1 fluidNonCouple2);
    }

    solid1Solid2
    {
        region          solid;
        patches         (solidNonCouple1 solidNonCouple2);
    }

    solid1Fluid2
    {
        owner
        {
            region          solid;
            patch           solidNonCouple1;

            patchFields
            {
                T
                {
                    type        coupledTemperature;
                    value       uniform 297;
                }
            }
        }

        neighbour
        {
            region          fluid;
            patch           fluidNonCouple2;

            patchFields
            {
                p
                {
                    type        fixedFluxPressure;
                }
                T
                {
                    type        coupledTemperature;
                    value       uniform 297;
                }
                U
                {
                    type        noSlip;
                }
            }
        }

    }

    solid2Fluid1
    {
        owner
        {
            region          solid;
            patch           solidNonCouple2;

            patchFields
            {
                $../../../solid1Fluid2/owner/patchFields;
            }
        }

        neighbour
        {
            region          fluid;
            patch           fluidNonCouple1;

            patchFields
            {
                $../../../solid1Fluid2/neighbour/patchFields;
            }
        }
    }
}

