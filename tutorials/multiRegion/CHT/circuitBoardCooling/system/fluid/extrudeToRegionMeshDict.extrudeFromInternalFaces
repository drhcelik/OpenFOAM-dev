FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system/fluid";
    object      extrudeToRegionMeshDict.extrudeFromInternalFaces;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

region          baffle3D;

faceZones       (baffle3D);

extrudeModel
{
    type            linearNormal;

    nLayers         50;
    expansionRatio  1;

    thickness       0.02;
}

adaptMesh       yes; // apply mapped to both regions


