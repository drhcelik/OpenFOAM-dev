FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 297;

boundaryField
{
    wall
    {
        type            coupledTemperature;
        thicknessLayers (1e-3);
        kappaLayers     (1e-3);
        value           $internalField;
    }
}

