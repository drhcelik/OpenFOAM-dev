FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/VoF";
    object      T.liquid;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    film
    {
        type            calculated;
        value           uniform 300;
    }
    vessel
    {
        type            symmetryPlane;
    }
    bottom
    {
        type            calculated;
        value           uniform 300;
    }
    atmosphere
    {
        type            calculated;
        value           uniform 300;
    }
    back
    {
        type            empty;
    }
    front
    {
        type            empty;
    }
}


