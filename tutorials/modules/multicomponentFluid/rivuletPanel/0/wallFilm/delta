FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/wallFilm";
    object      delta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1e-3;
    }

    outlet
    {
        type            zeroGradient;
    }

    sides
    {
        type            zeroGradient;
    }

    walls_top
    {
        type            zeroGradient;
    }

    wallFilm_to_region0_walls
    {
        type            zeroGradient;
    }
}


