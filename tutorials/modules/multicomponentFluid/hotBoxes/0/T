FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    walls
    {
        type            fixedValue;
        value           $internalField;
    }

    "region0_to_wallFilm_.*"
    {
        type            mapped;
        field           T;
        setAverage      no;
        average         300;
        value           $internalField;
    }
}


