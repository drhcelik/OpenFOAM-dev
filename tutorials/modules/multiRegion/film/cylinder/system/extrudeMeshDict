FoamFile
{
    format      ascii;
    class       dictionary;
    object      extrudeToRegionMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

sourceCase      "$FOAM_CASE";
constructFrom   patch;

sourcePatches   (surface);
exposedPatchName wall;

extrudeModel    linearNormal;

nLayers         1;

expansionRatio  1;

flipNormals     yes;
mergeFaces      no;

linearNormalCoeffs
{
    thickness       0.01;
}

