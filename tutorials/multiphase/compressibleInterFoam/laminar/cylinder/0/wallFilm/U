    {
        type            slip;
    }

    "wallFilm_to_region0_.*"
    {
        type            noSlip;
    }

    sides
    {
        type            noSlip;
    }

    top
    {
        type            noSlip;
    }

    frontAndBack
    {
        type            slip;
    }
}


