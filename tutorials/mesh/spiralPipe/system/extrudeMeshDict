FoamFile
{
    format      ascii;
    class       dictionary;
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom   mesh;

sourceCase      ".";

sourcePatches   (outlet);

flipNormals     false;

mergeFaces      false;

extrudeModel
{
    type            path;

    nLayers         500;
    expansionRatio  1;

    path            "constant/geometry/curve.obj";
}

