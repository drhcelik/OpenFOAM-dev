FoamFile
{
    format      ascii;
    class       LagrangianVectorField;
    location    "0/Lagrangian/linear";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [velocity];

internalField   uniform (0 0 0);

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    walls
    {
        type            escapeVelocity;
    }
}

sources
{
    pointInjection
    {
        type            uniformFixedValue;
        uniformValue    $internalField;
    }
}


