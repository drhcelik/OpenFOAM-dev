FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases          (gas liquid);

gas
{
    type            multicomponentPhaseModel;

    diameterModel   none;

    residualAlpha   1e-6;
}

liquid
{
    type            purePhaseModel;

    diameterModel   constant;
    d               5e-4;

    residualAlpha   1e-6;
}

blending
{
    default
    {
        type            continuous;
        phase           gas;
    }
}

surfaceTension
{
    gas_liquid
    {
        type            constant;
        sigma           0.07;
    }
}

