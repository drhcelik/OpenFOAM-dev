#!/bin/sh
cd ${0%/*} || exit 1    # Run from this directory

# Parse arguments for library compilation
. $WM_PROJECT_DIR/wmake/scripts/AllwmakeParseArguments

wmake $targetType decompositionMethods

# Optionally build scotchDecomp with its Allwmake
wmake -a $targetType scotchDecomp

# Optionally build ptscotchDecomp with its Allwmake
wmake -a $targetType ptscotchDecomp

# Optionally build metisDecomp with its Allwmake
wmake -a $targetType metisDecomp

# Optionally build zoltanDecomp with its Allwmake
wmake -a $targetType zoltanDecomp

#------------------------------------------------------------------------------
